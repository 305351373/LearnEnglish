<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/radioline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/radiosize"
        android:background="@color/radiobackground"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@id/btn_findword"
            android:orientation="horizontal">

            <View style="@style/view_margin" />

            <RadioButton
                android:id="@+id/btn_findword"
                style="@style/bottombarRadioButtonstyle"
                android:background="@drawable/main_dict_rb_bg_selector" />

            <View style="@style/view_margin" />

            <RadioButton
                android:id="@+id/btn_grammar"
                style="@style/bottombarRadioButtonstyle"
                android:background="@drawable/main_book_rb_bg_selector" />

            <View style="@style/view_margin" />

            <RadioButton
                android:id="@+id/btn_wordmemorize"
                style="@style/bottombarRadioButtonstyle"
                android:background="@drawable/main_rem_rb_bg_selector" />

            <View style="@style/view_margin" />

            <RadioButton
                android:id="@+id/btn_listen"
                style="@style/bottombarRadioButtonstyle"
                android:background="@drawable/listen" />

            <View style="@style/view_margin" />

        </RadioGroup>
    </LinearLayout>
</LinearLayout>