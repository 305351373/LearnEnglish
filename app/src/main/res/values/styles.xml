<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash</item>  <!--启动屏-->
    </style>


    <style name="bottombarRadioButtonstyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/radiosize</item>
        <item name="android:layout_height">@dimen/radiosize</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">0.0dip</item>
    </style>

    <style name="Textview_option">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="wordmemorize_btnstyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!--<item name="android:background">#f1f2fc</item>-->

    <style name="view_margin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
    </style>


</resources>
